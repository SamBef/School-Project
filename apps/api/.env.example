# Database (PostgreSQL). Local or Neon connection string.
DATABASE_URL="postgresql://user:password@localhost:5432/kobotrack"

# JWT secret — long, random string. Never commit the real value.
JWT_SECRET="your-jwt-secret-change-in-production"

# Email — Gmail / SMTP (easiest for dev).
# Get a Gmail App Password: https://myaccount.google.com/apppasswords
SMTP_USER="you@gmail.com"
SMTP_PASS="your-app-password"

# Email — SendGrid (alternative, for production).
# Create API key at https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL="noreply@example.com"

# Frontend URL — for CORS and links in emails.
FRONTEND_URL="http://localhost:5173"

# Server port (optional; default 3000)
PORT=3000
